{
    "name": "relativepath",
    "displayName": "RelativePath",
    "description": "Add Relative Path to Explorer context menu",
    "version": "0.1.2",
    "publisher": "john681611",
    "repository": "https://github.com/john681611/RelativePath.git",
    "icon": "icon.png",
    "keywords": [
        "copy",
        "relative",
        "path",
        "url",
        "file"
    ],
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.copyRelPathFoc"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyRelPathFoc",
                "title": "Copy Relative Path to File"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "RelativePath",
            "properties": {
                "relPath.excludeFileExtension": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Controls the excludes the extension of a file in the path"
                }
            }
        },
        "keybindings": [
            {
                "command": "extension.copyRelPathFoc",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "explorerViewletVisible"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.copyRelPathFoc",
                    "group": "5_cutcopypaste@9999"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "copy-paste": "^1.3.0"
    }
}
